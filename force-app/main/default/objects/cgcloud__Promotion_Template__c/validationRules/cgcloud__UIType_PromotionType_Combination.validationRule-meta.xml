<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__UIType_PromotionType_Combination</fullName>
    <active>true</active>
    <description>Verify that the UI Type and Promotion Type is a valid combination</description>
    <errorConditionFormula>AND(ISPICKVAL( cgcloud__Promotion_Type__c , &quot;Promotion&quot;),NOT(ISPICKVAL( cgcloud__UI_Type__c , &quot;SmartUI&quot;)))</errorConditionFormula>
    <errorDisplayField>cgcloud__UI_Type__c</errorDisplayField>
    <errorMessage>Select the Smart UI value only when the promotion type is Promotion</errorMessage>
</ValidationRule>

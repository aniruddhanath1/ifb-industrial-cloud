<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Primary_should_be_checked</fullName>
    <active>true</active>
    <description>Primary checkbox should be checked if quote is accepted</description>
    <errorConditionFormula>AND(ISPICKVAL(Customer_Quote_Approval__c, &apos;Accepted&apos;), 
				NOT(ISCHANGED(SBQQ__Primary__c)), 
				SBQQ__Primary__c  = false)</errorConditionFormula>
    <errorDisplayField>SBQQ__Primary__c</errorDisplayField>
    <errorMessage>Quote should be primary. If you want to Accept the quote.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Amount_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT($Setup.cgcloud__Validation_Rules_Setting__c.cgcloud__Bypass_Validation__c),
OR(ISBLANK(cgcloud__Amount__c),cgcloud__Amount__c &lt;=0))</errorConditionFormula>
    <errorMessage>Transaction Amount should be greater than 0.</errorMessage>
</ValidationRule>

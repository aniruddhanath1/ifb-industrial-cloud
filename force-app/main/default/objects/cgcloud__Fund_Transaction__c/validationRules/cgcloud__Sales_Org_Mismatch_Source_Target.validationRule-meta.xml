<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Sales_Org_Mismatch_Source_Target</fullName>
    <active>true</active>
    <description>The Source Fund and the Target Fund must have the same Sales Org.</description>
    <errorConditionFormula>AND
          (
             cgcloud__Transaction_Type__c = &quot;Transfer&quot;,
             cgcloud__Source_Fund__r.cgcloud__Sales_Org__c &lt;&gt; cgcloud__Target_Fund__r.cgcloud__Sales_Org__c
          )</errorConditionFormula>
    <errorMessage>The Source Fund and the Target Fund must have the same Sales Org.</errorMessage>
</ValidationRule>

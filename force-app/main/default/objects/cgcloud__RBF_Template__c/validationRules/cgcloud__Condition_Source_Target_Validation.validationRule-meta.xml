<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Condition_Source_Target_Validation</fullName>
    <active>true</active>
    <description>Validate either Condition Source and Target are Blank or both populated</description>
    <errorConditionFormula>AND($Setup.cgcloud__Validation_Rules_Setting__c.cgcloud__Bypass_Validation__c = FALSE, ISBLANK(cgcloud__Condition_Source_KPI__c),
NOT(ISBLANK(cgcloud__Condition_Target_KPI__c))
)</errorConditionFormula>
    <errorDisplayField>cgcloud__Condition_Source_KPI__c</errorDisplayField>
    <errorMessage>Condition Source KPI needs to be Populated when Condition Target KPI is Added</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Avoid_Change_Parent_Product</fullName>
    <active>true</active>
    <description>You cannot modify the Parent_Product once it has an existent value.</description>
    <errorConditionFormula>AND (
ISCHANGED( cgcloud__Parent_Product__c ),
NOT(ISBLANK(PRIORVALUE(cgcloud__Parent_Product__c )))
)</errorConditionFormula>
    <errorDisplayField>cgcloud__Parent_Product__c</errorDisplayField>
    <errorMessage>The Parent Product can&apos;t be edited after Product Part creation.</errorMessage>
</ValidationRule>

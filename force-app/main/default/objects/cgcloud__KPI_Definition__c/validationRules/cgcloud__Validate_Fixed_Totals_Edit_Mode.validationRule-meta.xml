<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Validate_Fixed_Totals_Edit_Mode</fullName>
    <active>true</active>
    <description>Fixed totals are only allowed if Edit Mode is total.</description>
    <errorConditionFormula>AND (
      cgcloud__Editable_Fixed_Totals__c,
      NOT(ISPICKVAL(cgcloud__Editable_Edit_Mode__c, &apos;total&apos;))
      )</errorConditionFormula>
    <errorDisplayField>cgcloud__Editable_Edit_Mode__c</errorDisplayField>
    <errorMessage>Fixed totals are only allowed if Edit Mode is total.</errorMessage>
</ValidationRule>

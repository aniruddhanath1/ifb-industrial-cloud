<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Restrict_Values_for_YearOffSet</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
      NOT(ISNULL(cgcloud__Data_Source_Year_Offset__c)),
      OR(cgcloud__Data_Source_Year_Offset__c &lt; 0, cgcloud__Data_Source_Year_Offset__c &gt; 2)
      )</errorConditionFormula>
    <errorMessage>Year Offset should be between 0, 1 or 2.</errorMessage>
</ValidationRule>

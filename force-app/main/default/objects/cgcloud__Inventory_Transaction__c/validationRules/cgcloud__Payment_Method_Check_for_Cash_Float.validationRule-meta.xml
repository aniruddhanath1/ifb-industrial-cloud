<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Payment_Method_Check_for_Cash_Float</fullName>
    <active>true</active>
    <description>Payment Method can&apos;t be empty if the Inventory is &apos;Cash Float&apos;.</description>
    <errorConditionFormula>AND
        (
        cgcloud__Inventory__r.RecordType.DeveloperName = &apos;Cash_Float&apos;,NOT(cgcloud__Allow_Manual_Creation__c),
        ISPICKVAL(cgcloud__Payment_Method__c, &apos;&apos;)
        )</errorConditionFormula>
    <errorMessage>Payment Method can&apos;t be empty if the Inventory is &apos;Cash Float&apos;.</errorMessage>
</ValidationRule>

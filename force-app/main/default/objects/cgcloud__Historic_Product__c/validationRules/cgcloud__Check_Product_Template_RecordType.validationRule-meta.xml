<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Check_Product_Template_RecordType</fullName>
    <active>true</active>
    <description>Allow only products with Product Template record type &quot;Product&quot;.</description>
    <errorConditionFormula>NOT(ISBLANK( cgcloud__Product__c )) &amp;&amp;
cgcloud__Product__r.cgcloud__Product_Template__r.RecordType.DeveloperName &lt;&gt; &apos;Product&apos;</errorConditionFormula>
    <errorMessage>Only products with Product Template record type &quot;Product&quot; allowed.</errorMessage>
</ValidationRule>

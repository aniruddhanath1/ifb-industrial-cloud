<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__Payment_Amount_Remain_Positive</fullName>
    <active>true</active>
    <errorConditionFormula>AND(RecordType.Name = &apos;Manual&apos;,PRIORVALUE( cgcloud__Payment_Amount__c  ) &gt;= 0,  OR(cgcloud__Payment_Amount__c  &lt; 0,  ISBLANK(cgcloud__Payment_Amount__c)))</errorConditionFormula>
    <errorDisplayField>cgcloud__Payment_Amount__c</errorDisplayField>
    <errorMessage>The amount must remain positive in a positive payment.</errorMessage>
</ValidationRule>

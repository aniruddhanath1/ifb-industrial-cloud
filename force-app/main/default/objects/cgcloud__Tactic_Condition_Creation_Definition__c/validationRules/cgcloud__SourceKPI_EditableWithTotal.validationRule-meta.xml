<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>cgcloud__SourceKPI_EditableWithTotal</fullName>
    <active>true</active>
    <description>The Source KPI Definition must have Record Type &apos;Editable&apos; and Edit Mode &apos;Total&apos;.</description>
    <errorConditionFormula>OR(
    cgcloud__Source_KPI_Definition__r.RecordType.DeveloperName &lt;&gt; &apos;editable&apos;,
    NOT(ISPICKVAL(cgcloud__Source_KPI_Definition__r.cgcloud__Editable_Edit_Mode__c, &apos;total&apos;))
)</errorConditionFormula>
    <errorDisplayField>cgcloud__Source_KPI_Definition__c</errorDisplayField>
    <errorMessage>The Source KPI Definition must have Record Type &apos;Editable&apos; and Edit Mode &apos;Total&apos;.</errorMessage>
</ValidationRule>

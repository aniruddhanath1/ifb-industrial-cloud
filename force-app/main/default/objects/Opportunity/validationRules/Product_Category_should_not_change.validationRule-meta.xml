<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_Category_should_not_change</fullName>
    <active>true</active>
    <errorConditionFormula>AND(LoadCalculated__c = true,
				ISCHANGED(Product_category__c ),
				!$User.Bypass_Validation_Rules__c,
    NOT(CONTAINS($Profile.Name, &apos;Admin&apos;))						
)</errorConditionFormula>
    <errorMessage>We can not change product category once the load is calculated.</errorMessage>
</ValidationRule>

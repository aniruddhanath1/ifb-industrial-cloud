<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>Owner</field>
        <field>Freight_Terms__c</field>
        <field>Payment_Term__c</field>
        <field>Product_category__c</field>
        <field>WarrantyTerm_In_Year__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pradeep_umapathi@ifbglobal.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Send To Technical Validator</label>
        <name>Send_To_Technical_Validator</name>
    </approvalStep>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved_status_By_Technical</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>commercial_validation_sent</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PriceCostEditableTrue</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PriceCostEditableTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_Stage_denied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected_status_By_Technical</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CVRejectPrice_CostEditableFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>notification</name>
            <type>OutboundMessage</type>
        </action>
        <action>
            <name>Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Technical Validation</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Approval_Stage_Blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PriceCostEditableTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

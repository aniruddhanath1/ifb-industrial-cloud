<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SBQQ__AverageCustomerDiscount__c</field>
        <field>Freight_Terms__c</field>
        <field>Fright_Charges__c</field>
        <field>Freight_Includes__c</field>
        <field>Payment_Term__c</field>
        <field>WarrantyTerm_In_Year__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_Commercial</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CVApprovePrice_CostEditableFalse</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>notification</name>
                <type>OutboundMessage</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Commercial_Validator_ILM</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
    Product_category__c = &apos;Industrial Laundry Machine&apos;,
    CreatedDate+30 &gt; NOW()
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>First 30 days</label>
        <name>ILM_First_30_days</name>
        <rejectionActions>
            <action>
                <name>CVRejectPrice_CostEditableFalse</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>notification</name>
                <type>OutboundMessage</type>
            </action>
            <action>
                <name>Rejected_By_Commercial</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_Commercial</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CV1ApprovetPrice_CostEditableFalse</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CV1RejectPriceCostEditableFalse</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>notification</name>
                <type>OutboundMessage</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Commercial_Validator_IDW</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Product_category__c</field>
                <operation>equals</operation>
                <value>Industrial Dishwasher</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>IDW Quote</label>
        <name>IDW_Quote</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>notification</name>
                <type>OutboundMessage</type>
            </action>
            <action>
                <name>Rejected_By_Commercial</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_NH</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sending_Approver_Notification</name>
                <type>OutboundMessage</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>National_Head_CEO</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>IF(
    OR(
        AND(
            Product_category__c = &apos;Industrial Dishwasher&apos;,
            OR(
                Additional_Feature_Added__c = true,
                ISPICKVAL(Freight_Terms__c, &apos;Borne by IFB&apos;),
                Pterm__c &lt; 100,
                WarrantyTerm_In_Year__c &gt; 1,
                Maximum_Discount__c &gt; 12,
                ISPICKVAL(Installation_Level__c, &apos;Above&apos;),
                ISPICKVAL(Installation_Level__c, &apos;Basement&apos;),
                AND(
                    OR(
                        ISPICKVAL(Expected_Delivery_Period__c, &apos;3-4 weeks&apos;),
                        ISPICKVAL(Expected_Delivery_Period__c, &apos;5-8 weeks&apos;),
                        ISPICKVAL(Expected_Delivery_Period__c, &apos;8-10 weeks&apos;)
                    ),
                    TEXT(Expected_Delivery_Period__c) &lt;&gt; TEXT(Actual_Delivery_Period__c)  /* Only compare if picklist value is one of these */
                )
            )
        ),
        AND(
            Product_category__c = &apos;Industrial Laundry Machine&apos;,
            OR(
                Additional_Feature_Added__c = true,
                ISPICKVAL(Freight_Terms__c, &apos;Borne by IFB&apos;),
                Pterm__c &lt; 40,
                WarrantyTerm_In_Year__c &gt; 1,
                Maximum_Discount__c &gt; 20,
                ISPICKVAL(Installation_Level__c, &apos;Above&apos;),
                ISPICKVAL(Installation_Level__c, &apos;Basement&apos;),
                AND(
                    OR(
                        ISPICKVAL(Expected_Delivery_Period__c, &apos;3-4 weeks&apos;),
                        ISPICKVAL(Expected_Delivery_Period__c, &apos;5-8 weeks&apos;),
                        ISPICKVAL(Expected_Delivery_Period__c, &apos;8-10 weeks&apos;)
                    ),
                    TEXT(Expected_Delivery_Period__c) &lt;&gt; TEXT(Actual_Delivery_Period__c)  /* Only compare if picklist value is one of these */
                )
            )
        )
    ),
    true,
    false
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CIT Approval and Discount</label>
        <name>CIT_Approval_and_Discount</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Rejected_By_NH</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sending_Approver_Notification</name>
                <type>OutboundMessage</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>notification</name>
                <type>OutboundMessage</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
    Product_category__c = &apos;IDW&apos;,
    NOW() &lt;= (CreatedDate + 30),
    Maximum_Discount__c &lt; 12,
    ISPICKVAL(Freight_Terms__c, &apos;Borne by IFB&apos;),
    Payment_Term__c &gt;= 100,
    WarrantyTerm_In_Year__c &lt;= 1,
    NOT(ISPICKVAL( Installation_Level__c , &apos;Above&apos;)),
    ISPICKVAL(Expected_Delivery_Period__c,&apos;&apos;)
)</formula>
        </entryCriteria>
        <label>Greated than 30 days</label>
        <name>Greated_than_30_days</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>notification</name>
                <type>OutboundMessage</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SBQQ__Quote__c.RecordType</field>
            <operation>equals</operation>
            <value>Standard</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CVRejectPrice_CostEditableFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>notification</name>
            <type>OutboundMessage</type>
        </action>
        <action>
            <name>Quote_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CommercialFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>notification</name>
            <type>OutboundMessage</type>
        </action>
        <action>
            <name>Quote_Stage_denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>notification</name>
            <type>OutboundMessage</type>
        </action>
        <action>
            <name>PriceCostEditableTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Standard Quote Approval V2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>Approval_Stage_Blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CommercialFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PriceCostEditableTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

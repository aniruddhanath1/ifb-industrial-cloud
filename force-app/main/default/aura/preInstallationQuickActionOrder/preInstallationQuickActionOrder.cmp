<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global" controller="OpportunityILMTableComponentController">
	<aura:attribute name="recordId" type="String" />
    <aura:attribute name="opportunityId" type="String"/>
     <aura:attribute name="errorMessage" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:if isTrue="{!not(empty(v.opportunityId))}">
        <c:preInstallationParentComponent recordId="{!v.opportunityId}" onclose="{!c.handleClose}" />
    </aura:if>
    
    <aura:if isTrue="{!empty(v.opportunityId)}">
        <div class="slds-p-around_medium">
            <aura:if isTrue="{!not(empty(v.errorMessage))}">
            <lightning:card title="Error">
                <p class="slds-text-color_error">{!v.errorMessage}</p>
            </lightning:card>
                </aura:if>
        </div>
    </aura:if>
</aura:component>